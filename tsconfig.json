{
	"compilerOptions": {
		"target": "es2019",
		"module": "es2015",
		"moduleResolution": "node",
		"lib": [
			"es2019",
			"dom"
		],
		"declaration": true,
		"declarationMap": true,
		"removeComments": true,
		"useDefineForClassFields": false,
		"noLib": false,
		"rootDir": "./src",
		"outDir": "./dist",
		"experimentalDecorators": true,
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}